@section scripts{

    <script>
        $(document).ready(function () {

            var city = localStorage.getItem("City");
            var type = localStorage.getItem("Type");
            var center = localStorage.getItem("Center");
            var CID = Number(city);
            var TID = Number(type);
            var CetID = Number(center);
            if (CID > 0) {
                $('#City').val(CID);
            }

